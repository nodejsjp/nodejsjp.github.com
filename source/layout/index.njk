{% extends layoutDir + '/layout.njk' %}

{% block main %}
<h1 class="title">{{ orgName }}</h1>

<hr />

<h2><a href="https://nodejs.org/ja/download/">Node.js ダウンロード</a></h2>

<h2>公式ドキュメント</h2>

<ul>
